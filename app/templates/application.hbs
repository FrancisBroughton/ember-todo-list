<div class="container main">
<h1> Todo List </h1>
<h3> What you gotta do?</h3>


  <form class="containerinput">
    <div class=input>
      {{input type="text" class="input" placeholder="Add a task" value=todo }}
      <button class="btn" {{action (route-action 'save' todo)}} type="submit" >Add</button>
    </div>
  <br>
 <br>
</form>
 {{!-- To iterate over a list of items, use the {{#each}} --}}
<div class="container">
  <div class="list-group">
    {{#each model as |task|}} 
    <div class="row">
      <div class="list-group-item ">
       <span class="todo" >
          {{task.todo}}
        </span> 

        <div class="checkdelete">
          <span class="check">
              {{one-way-checkbox checked=todo.todoComp update=(action (route-action 'toggleTask' todo))}} 
              <button class="btnremove" {{action (route-action 'delete' task)}}>{{fa-icon "trash"}} Delete</button>
          </span>  
            
        </div> 
             
      </div>    
    </div>
    {{/each}}
  </div>
</div>

<br>

<div class="container">
  <div class="button">
    <button type="button" class="btn1"   {{action 'showAll'}} > {{fa-icon "camera"}} All tasks </button>
    <button type="button"class="btn1" {{action 'showCompleted'}}>{{fa-icon "far fa-list"}} Complete</button>
    <button type="button" class="btn1" {{action 'showIncomplete'}}>{{ fa-icon "fas fa-list"}} Incomplete </button>
</div>
</div>
</div>








{{outlet}}